Eddroid.Main = function(game){
  this.map;
  this.mapjson;
  this.player;
  this.cursors;
  this.blockedLayer;
  playMusic = true,
  this.music;
  this.bullet;
  this.bulletTime = 0;
  this.fireButton;
  this.addA;
  this.addS;
  this.addW;
  this.addD;
  this.playerDirection;
  this.enemies;
  this.rubies;
  this.ruby;
  this.destroy;
  this.flames;
  this.playerHit;
  this.rails;
  this.playerHit1;
  this.score = 0;
  this.scoreString;
  this.cascades;
  this.javascripts;
  this.lives = 10;
  this.livesString;

